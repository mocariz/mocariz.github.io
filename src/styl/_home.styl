main
    padding-top rem(140px)
    background rgba(174, 129, 255, 0.1)
    padding-bottom rem(50px)

.row
    center(rem(1200px))

.flex-grid
    display flex
    flex-flow row wrap

.title-category
    center(rem(1000px))
    font-size rem(40px)
    margin-top 0
    text-transform uppercase
    padding 0 rem(15px)

.box-item
    border 1px solid #ddd
    flex 1 0 300px
    margin 0 rem(15px) rem(50px)
    display inline-block
    border-radius 4px
    min-height rem(285px)
    transition all .3s
    position relative
    .box-data
      display table
      width 100%
      text-align right
      padding rem(15px) rem(20px) 0 0
      margin-bottom rem(-5px)
      time
        font-size rem(14px)
        color #b2bac2
      span
        float left
        padding rem(5px) 0 0 rem(20px)
        font-size rem(12px)
        font-weight bold
        text-transform uppercase
        a
          color rosa
          border rem(1px) solid #bb2f53
          padding rem(8px) rem(8px) rem(5px) rem(8px)
          border-radius rem(5px)
          box-shadow rem(1px) rem(1px) rem(2px) #b9c7c2
    .box-title
      height rem(200px)
      background rosa
      opacity 0.5
      border 0
      padding 0
      a
        color white
        h2
          padding 70px 0
          text-align center
      &:hover
        opacity 0
    &:hover
      box-shadow 1px 2px 10px rgba(174, 129, 255, 0.58)
    a
      text-decoration none
    .box-body
        padding rem(25px)
        h2
            margin rem(5px) 0 rem(15px)
            font-size rem(20px)
            mainFont(800)
            color main
            span
                color
        p
            margin 0 0 rem(20px)
            color #576366
            font-size rem(14px)
            line-height rem(22px)
        .tags a
            color main
            padding rem(5px) rem(10px)
            border-radius 3px
            display inline-block
            margin 0 0 rem(5px)
            z-index 50

.ribbon
    position absolute
    right -5px
    top -5px
    z-index 1
    overflow hidden
    width 75px
    height 75px
    text-align right
    span
        font-size rem(12px)
        font-weight bold
        color #FFF
        text-transform uppercase
        text-align center
        line-height 20px
        transform rotate(45deg)
        -webkit-transform rotate(45deg)
        width 100px
        display block
        background #B31917
        position absolute
        top 19px
        right: -21px
        &:before
            content ""
            position absolute
            left 0px
            top 100%
            z-index -1
            border-left 3px solid main
            border-right 3px solid transparent
            border-bottom 3px solid transparent
            border-top 3px solid main
        &:after
            content ""
            position absolute
            right 0px
            top 100%
            z-index -1
            border-left 3px solid transparent
            border-right 3px solid main
            border-bottom 3px solid transparent
            border-top 3px solid main

#banner
  background-image url('/assets/img/bg-pattern.png')
  background-color #bb2f53
  color white
  position relative
  height rem(450px)
  overflow-y hidden
  .wrapper
    height 100%
    padding 0
    max-width 740px
    margin-right auto
    margin-left auto
