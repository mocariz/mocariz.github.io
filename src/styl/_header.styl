html,
body
	height 100%

$bg
	background-color main
	.content
		width 95%
		text-align center
		padding rem(180px) 0 rem(66px)

.bar-header
	background-color sec
	padding rem(10px) rem(5px)
	position fixed
	width 100%
	height rem(49px)
	z-index 10
	.logo
		margin 0
		line-height rem(35px)
		a
			font-family cursive !important
			color main
			text-decoration none
			font-size rem(40px)
			&:after
				position absolute
				padding 3px 50px
				font-weight bold
				transition all .4s
				content ''
				+above(cut)
					content '<M/M> Monica Mota'
	.logo img
		width 75px
		float left
		margin-top rem(-13px)
		margin-left rem(10px)

// Header Post
.header-post
	@extends $bg
	min-height rem(500px)
	width 100%
	background-image url('/assets/img/bg-pattern.png')
	.content
		margin auto
	.subheader
		display table
		padding 20px
		a
			border 2px solid sec
			border-radius 20px
			padding 0 10px
			+above(cut)
				padding 0 10px

	.date
		mainFont(300)
		font-size rem(16px)
	h1
		font-size rem(30px)
		margin 0 0 30px
		text-shadow 3px 3px darken(main, 20%)
		+above(cut)
			font-size rem(60px)
	.subtitle
		mainFont(300)
		font-size rem(20px)
	h1,.subtitle, .date
		color sec
		text-align center
	a,p
		color sec
		text-decoration none
		mainFont(300)
		font-size rem(18px)
