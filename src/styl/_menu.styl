*, *:before, *:after
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    box-sizing border-box

body
  left 0
  right 0
  margin auto

a, aside, .overlay, body
    transition all .25s ease
a.slideButton, .dosearch
    position fixed
    display block
    top rem(9px)
    z-index 17
    border 1px solid main
    padding-right rem(12px)
    border-radius 5px
    cursor pointer
    span
        color main
        font-size rem(18px)
        font-weight bold
        position relative
        display inline-flex
        top -10px

.slideButton
    right 60px
.dosearch
    right 10px
    border-radius rem(3px)
    padding rem(2px) rem(3px)
.icon-menu
    cursor pointer
    padding rem(5px)
    border-radius rem(3px)
    width rem(35px)
    height rem(35px)
    fill main

.icon-search
    width rem(35px)
    height rem(35px)

.overlay
    cursor pointer

#close
    display none
    fill sec
    background main
    background-image url('/assets/img/bg-pattern.png')

aside
    position fixed
    height 100%
    width rem(250px)
    padding rem(40px) 0 0
    top 0
    right rem(-310px)
    background-image url('/assets/img/bg-pattern.png')
    background-color #bb2f53
    color white
    z-index 120
    box-shadow inset -10px -1px 15px -9px rgba(0,0,0,0.5)
    h2
        font-family cursive !important
        font-family 'Open Sans', sans-serif
        text-align center
        margin 0 0 rem(10px)
        mainFont(800)
        font-size rem(35px)
        color sec
    nav
        ul
            padding 0
        li
            margin 0
            list-style-type none
            a
                width 100%
                display block
                padding rem(20px)
                text-decoration none
                mainFont(300)
                color sec
                cursor pointer
                &:hover
                    color main
                    background sec
        ul.rss
            margin-top 100%
            a
                text-align center
                background sec
                color main
                width 150px
                padding 13px
                margin auto
                border-radius 10px
                font-weight bold

    &.slide
        right 0


.slide #close
    right rem(245px)
    position fixed
    pointer-events none

.overlay
    position fixed
    width 100%
    height 100%
    top 0
    right 0
    pointer-events none
    background transparent
    z-index 17
    &.slide
        pointer-events auto
        right 240px
        background rgba(0,0,0,.6)
